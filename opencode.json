{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "streamable-mcp-server": {
      "type": "remote",
      "url": "http://127.0.0.1:12306/mcp",
      "enabled": true
    },

    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "YOUR_API_KEY"
      },
      "enabled": true
    }
  }
}
